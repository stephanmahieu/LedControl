<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="serialJSONProcessor" class="ledcontrol.serialcomm.processor.SerialJSONProcessor"/>
    <bean id="serialTextProcessor" class="ledcontrol.serialcomm.processor.SerialTextProcessor"/>
    <bean id="serialDataSender" class="ledcontrol.serialcomm.processor.SerialDataSender"/>

    <bean id="socketKeepAliveSender" class="ledcontrol.websocket.SocketKeepAliveSender"/>
    <bean id="webSocketSender" class="ledcontrol.websocket.WebSocketSender"/>
</beans>